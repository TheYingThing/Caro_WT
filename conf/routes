# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /first/:color               controllers.HomeController.put(row: Int ?= 7, col: Int ?=7, color)
GET     /put/:row/:col/:color       controllers.HomeController.put(row: Int,col: Int, color: String)
GET     /undo                       controllers.HomeController.undo()
GET     /redo                       controllers.HomeController.redo()
GET     /save                       controllers.HomeController.save()
GET     /load                       controllers.HomeController.load()
GET     /player1/:name              controllers.HomeController.player1(name)
GET     /player2/:name              controllers.HomeController.player2(name)
GET     /newGame                    controllers.HomeController.newGame()
GET     /game/:player1/:player2     controllers.HomeController.startGame(player1: String, player2: String)

GET     /rules                      controllers.HomeController.rules()
GET     /board                      controllers.HomeController.board()
GET     /score                      controllers.HomeController.score()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
